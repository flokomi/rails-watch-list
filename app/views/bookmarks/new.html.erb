<div class="container">
  <div class="margin-top">
    <h1>Add a movie to <strong><%= "#{@list.name}" %></strong></h1>
    <div class="form">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, prompt: "Select a movie", input_html: {data: { controller: "tom-select"}} %>
        <%= f.input :comment, placeholder: 'Enter a comment' %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
